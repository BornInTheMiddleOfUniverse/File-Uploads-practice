extends base

block content
    if errorMessage 
        span=errorMessage
        
    h1 TXT2HTML!

    form(method="POST", enctype="multipart/form-data", action="/read")
        input(type="file", accept="txt/*", id="txt", name="txt", required)
        input(type="submit", value="Convert!")
    ul
        each file in files
            li
                a(href=`/read/${file}`)=file
